}

//返回折扣
var returnDiscount = function(data){
  var d = data ? parseFloat(data / 10).toString() : '0';
  var index = d.indexOf(".");
  if (index > 0) {
    d = d.substring(0, index + 2);
  }
  return d;
}


/**
 * 返回加载更多or已加载所有
 */
var returnMore = function(num, query) {
  if (num) {
    if (num / query.page_size <= query.page) {
      return '已加载所有';
    } else {
      return '加载更多...';
    }
  } else {
    return '已加载所有';
  }
}

